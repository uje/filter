{
  "apps": [{
    "name": "filter",
    "script": "app.js",
    "log_date_format": "YYYY-MM-DD HH:mm:ss",
    "merge_logs": true,
    "log_file": "./logs/access.log",
    "error_file": "./logs/error.log",
    "out_file": "./logs/out.log",
    "pid_file": "./filter.pid",
    "exec_mode": "cluster",
    "instances": "4",
    "max_restarts": 1000,
    "max_memory_restart": "5G",
    "watch": false,
    "ignore_watch": ["cache"],
    "watch_options": {
      "usePolling": true
    },
    "env_production": {
      "NODE_ENV": "production"
    },
    "env_development": {
      "NODE_ENV": "development"
    },
    "env_test": {
      "NODE_ENV": "test"
    },
    "env_forrel": {
      "NODE_ENV": "forrel"
    }
  }]
}
